<%= form_for(@result) do |f| %>
    <ul>
        <% @result.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>

    <div class="control-group">
        <%= label_tag 'org-name', t('shared.result.org') %><br />
        <%= f.collection_select :org_id, Org.all, :id, :name, { :include_blank => true }, :autofocus => true %>
    </div>

    <div class="control-group">
        <h3><%= t('shared.result.term.header') %></h3>
        <div id="about-org"></div>
        <div class="row-group terms-pmz hidden-start">
            <%= label_tag 'real-term', t('shared.result.term.real') %> <span id="count-of-terms"></span>
        </div>
        <div class="row-group">
            <%= label_tag 'used-term', t('shared.result.term.used') %><br />
            <%= f.text_field :used_term %>
        </div>

        <div class="container-term-reason hidden-start">
            <%= label_tag 'term-reason', t('shared.result.term.reason') %><br />
            <%= f.text_area :used_term_reason, :rows => 4 %>
        </div>
    </div>

    <div class="control-group">
        <h3><%= t('shared.result.emk.header') %></h3>
        <%= label_tag 'emk-used', t('shared.result.emk.used') %><br />
        <%= label_tag 'emk-used-yep', t('shared.result.yep') %>
        <%= f.radio_button :emk_term, 1 %>
        <%= label_tag 'emk-used-nope', t('shared.result.nope') %>
        <%= f.radio_button :emk_term, 0 %>

        <div class="container-mis hidden-start">
            <%= label_tag 'mis-used', t('shared.result.emk.mis') %><br />
            <%= label_tag 'mis-used-yep', t('shared.result.yep') %>
            <%= f.radio_button :mis_inet, 1 %>
            <%= label_tag 'mis-used-nope', t('shared.result.nope') %>
            <%= f.radio_button :mis_inet, 0 %>
        </div>

        <div class="container-emk-reason hidden-start">
            <%= label_tag 'emk-reason', t('shared.result.emk.reason') %><br />
            <%= f.text_area :mis_emk_reason, :rows => 4 %>
        </div>
    </div>

    <div class="control-group register-group hidden-start">
        <h3><%= t('shared.result.register.header') %></h3>
        <%= label_tag 'register-used', t('shared.result.register.used') %><br />
        <%= label_tag 'register-used-yep', t('shared.result.yep') %>
        <%= f.radio_button :register, 1 %>
        <%= label_tag 'register-used-nope', t('shared.result.nope') %>
        <%= f.radio_button :register, 0 %>

        <div class="container-register-reason hidden-start">
            <%= label_tag 'register-reason', t('shared.result.register.reason') %><br />
            <%= f.text_area :register_reason, :rows => 4 %>
        </div>

        <div class="container-register-details hidden-start">
            <%= label_tag 'register-details', t('shared.result.register.details') %><br />
            <%= label_tag 'register-reg', t('shared.result.register.reg') %><br />
            <%= f.text_field :records_reg %><br />
            <%= label_tag 'register-infomat', t('shared.result.register.infomat') %><br />
            <%= f.text_field :records_infomat %><br />
            <%= label_tag 'register-inet', t('shared.result.register.inet') %><br />
            <%= f.text_field :record_inet %>
        </div>
    </div>

    <div class="control-group">
        <h3><%= t('shared.result.doc.header') %></h3>
        <%= label_tag 'doc-used', t('shared.result.doc.used') %><br />
        <%= label_tag 'doc-used-yep', t('shared.result.yep') %>
        <%= f.radio_button :doc_reg, 1 %>
        <%= label_tag 'doc-used-nope', t('shared.result.nope') %>
        <%= f.radio_button :doc_reg, 0 %>

        <div class="container-doc-reason hidden-start">
            <%= label_tag 'doc-reason', t('shared.result.doc.reason') %><br />
            <%= f.text_area :doc_reg_reason, :rows => 4 %>
        </div>
    </div>

    <div class="control-group infomat-group hidden-start">
        <h3><%= t('shared.result.infomat.header') %></h3>
        <%= label_tag 'infomat-used', t('shared.result.infomat.used') %><br />
        <%= label_tag 'infomat-used-yep', t('shared.result.yep') %>
        <%= f.radio_button :used_infomat, 1 %>
        <%= label_tag 'infomat-used-nope', t('shared.result.nope') %>
        <%= f.radio_button :used_infomat, 0 %>

        <div class="container-infomat-reason hidden-start">
            <%= label_tag 'infomat-reason', t('shared.result.infomat.reason') %><br />
            <%= f.text_area :used_infomat_reason, :rows => 4 %>
        </div>
    </div>

    <div class="control-group info-group hidden-start">
        <h3><%= t('shared.result.info.header') %></h3>
        <%= label_tag 'info-used', t('shared.result.info.used') %><br />
        <%= label_tag 'info-used-yep', t('shared.result.yep') %>
        <%= f.radio_button :info_pat, 1 %>
        <%= label_tag 'info-used-nope', t('shared.result.nope') %>
        <%= f.radio_button :info_pat, 0 %>

        <div class="container-info-reason hidden-start">
            <%= label_tag 'info-reason', t('shared.result.info.reason') %><br />
            <%= f.text_area :info_pat_reason, :rows => 4 %>
        </div>
    </div>

    <div class="control-group">
        <%= label_tag 'comments', t('shared.result.comments') %><br />
        <%= f.text_area :comments, :rows => 10 %>
    </div>

    <div class="control-group">
        <h3><%= t('shared.result.performer.header') %></h3>
        <%= label_tag 'fio', t('shared.result.performer.fio') %><br />
        <%= f.text_field :fio %><br />
        <%= label_tag 'phone', t('shared.result.performer.phone') %><br />
        <%= f.text_field :phone %>
    </div>

    <div class="control-group buttons-group hidden-start">
        <div class="controls">
            <%= f.submit t('shared.actions.save'), {:class => "btn-primary btn"} %>
            <%= submit_tag t('shared.actions.cancel'), {:name => 'cancel_button', :class => "btn"} %>
        </div>
    </div>
<% end %>
