<div class="container-fluid">
    <h3><%= t('shared.pages.statistic.title') %></h3>
    <div id="org-list"> 
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th width="3%" rowspan="2"><%= t('shared.pages.statistic.table.numb_html') %></th>
                    <th width="16%" rowspan="2"><%= t('shared.pages.statistic.table.name') %></th>
                    <th width="12%" colspan="2"><%= t('shared.pages.statistic.table.terms') %></th>
                    <th width="12%" colspan="2"><%= t('shared.pages.statistic.table.emk') %></th>
                    <th width="13%" rowspan="2"><%= t('shared.pages.statistic.table.register') %></th>
                    <th width="7%" rowspan="2"><%= t('shared.pages.statistic.table.doc_reg') %></th>
                    <th width="12%" rowspan="2"><%= t('shared.pages.statistic.table.infomat_html') %></th>
                    <th width="10%" rowspan="2"><%= t('shared.pages.statistic.table.info_stand') %></th>
                    <th rowspan="2"><%= t('shared.pages.statistic.table.comments') %></th>
                </tr>
                <tr>
                    <th><%= t('shared.pages.statistic.table.term_real') %></th>
                    <th><%= t('shared.pages.statistic.table.term_used') %></th>
                    <th><%= t('shared.pages.statistic.table.emk_term') %></th>
                    <th><%= t('shared.pages.statistic.table.emk_inet') %></th>
                </tr>
                <% @orgs.each do |org| %>
                    <tr>
                        <td><%= org.id %></td>
                        <td>
                            <% if not org.results.blank? %>
                                <%= link_to org.name, org %>
                            <% else %>
                                <%= org.name %>
                            <% end %>
                        </td>
                        <% if org.results.blank? %>
                            <td colspan="9" class="center-middle"><%= t('shared.pages.statistic.table.none') %></td>
                        <% else %>
                            <td><%= org.term %></td>
                            <td><%= org.results.last.used_term %></td>
                            <td>
                                <% if org.results.last.emk_term==1 %>
                                    <%= t('shared.pages.statistic.table.yep') %>
                                <% elsif org.results.last.emk_term==0 %>
                                    <%= t('shared.pages.statistic.table.nope') %>
                                <% end %>
                            </td>
                            <td>
                                <% if org.results.last.mis_inet==1 %>
                                    <%= t('shared.pages.statistic.table.yep') %>
                                <% elsif org.results.last.mis_inet==0 %>
                                    <%= t('shared.pages.statistic.table.nope') %>
                                <% else %>
                                    —
                                <% end %>
                            </td>
                            <td>
                                <% if org.results.last.register==1 %>
                                    <%= t('shared.pages.statistic.table.register_feb') %><br />
                                    <%=t 'shared.pages.statistic.table.through_reg', :reg => "#{org.results.last.records_reg}" %><br />
                                    <%=t 'shared.pages.statistic.table.through_inf',  :info => "#{org.results.last.records_infomat}" %><br />
                                    <%=t 'shared.pages.statistic.table.through_inet', :inet => "#{org.results.last.record_inet}" %>
                                <% elsif org.results.last.register==0 %>
                                    <%= t('shared.pages.statistic.table.nope') %>
                                <% else %>
                                    —
                                <% end %>
                            </td>
                            <td>
                                <% if org.results.last.doc_reg==1 %>
                                    <%= t('shared.pages.statistic.table.yep') %>
                                <% elsif org.results.last.doc_reg==0 %>
                                    <%= t('shared.pages.statistic.table.nope') %>
                                <% else %>
                                    —
                                <% end %>
                            </td>
                            <td>
                                <% if org.results.last.used_infomat==1 %>
                                    <%= t('shared.pages.statistic.table.yep') %>
                                <% elsif org.results.last.used_infomat==0 %>
                                    <%= t('shared.pages.statistic.table.nope') %>
                                <% else %>
                                    —
                                <% end %>
                            </td>
                            <td>
                                <% if org.results.last.info_pat==1 %>
                                    <%= t('shared.pages.statistic.table.yep') %>
                                <% elsif org.results.last.info_pat==0 %>
                                    <%= t('shared.pages.statistic.table.nope') %>
                                <% else %>
                                    —
                                <% end %>
                            </td>
                            <td>
                                <% if org.results.last.comments %>
                                    <%= t('shared.pages.statistic.table.read') %>
                                <% else %>
                                    —
                                <% end %>
                            </td>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div id="total">
    </div>
</div>
